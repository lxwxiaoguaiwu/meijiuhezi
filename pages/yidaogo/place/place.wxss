/* pages/yidaogo/place/place.wxss */
page{
  background-color:#f4f4f4;
}
.address{
  background-color: #fff;
  font-size: 32rpx;
  color: #333;
  border: 1rpx solid #e5e5e5;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.addbox{
  display: flex;
  justify-content: space-between;
  margin-top: 25rpx;
}
.shippingaddress{
  background-color: #fff;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}
.buygoods{
  /* margin-top: 20rpx; */
  background-color: #fff;
}
.buygoods .buygoods_title{
  font-size: 30rpx;
  color: #333;
  text-align: center;
  height: 80rpx;
  display: block;
  line-height: 80rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.buygoods_content{
  /* width: 90%;
  margin: 0 auto; */
  padding-top: 34rpx;
}
.buygoods_content .content_list{
  display: flex;
  padding: 0 34rpx;
  padding-bottom: 43rpx;
  padding-top: 34rpx;
  border-bottom: 1rpx solid #e5e5e5
}
.buygoods_content .content_list .pic{
  margin-right: 46rpx;
}
.buygoods_content .content_list .pic image{
  width: 29rpx;
  height: 97rpx;
}
.buygoods_content .content_list .content_words{
  flex: 1;
}
.buygoods_content .content_list .content_words .words_title{
  font-size: 28rpx;
  color: #333;
  margin-bottom: 42rpx;
}
.buygoods_content .content_list .content_words .num{
  display: flex;
  justify-content: space-between
}
.buygoods_content .content_list .content_words .num .count{
  font-size: 26rpx;
  color: #666;
}
.buygoods_content .content_list .content_words .num .price{
  font-size: 30rpx;
  color: #ea5504;
}
.payment{
  position: fixed;
  bottom: 0;
  width: 100%;
}
.payment .money{
  height: 92rpx;
  background-color: #fff;
  justify-content: flex-end;
  line-height: 92rpx;
  display: flex;
  color: #333;
  font-size: 30rpx;
  padding-right: 5%;
}
.payment .money .price{
  color: #ea5504;
}
.payment .submit{
  height: 100rpx;
  background-color: #ea5504;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 100rpx;
}