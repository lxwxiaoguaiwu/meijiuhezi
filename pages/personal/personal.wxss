/* pages/personal/personal.wxss */
.userinfo {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  flex-direction: column;
  position: absolute;
  top: 0;
}
.personalbg{
  width: 100%;
}
page{
  background-color: #f4f4f4;
}
.ordicon{
  width:10rpx;
  height:40rpx;
  background-color:#e85507;
  border-radius:50rpx;
  margin-left:30rpx;

}
.nopeopleorder{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.container1{
  width: 100%;
}
.userinfo text{
  color: #fff;
  font-size: 32rpx;
}
.account-bg {
  width: 100rpx;
  height: 100rpx;
  padding-left: 5%;
  padding-right: 5%;
}
.userinfo-avatar {
  width: 108rpx;
  height: 108rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #fff;
}
/* 订单 */
.order {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
  
}
.myorder-text {
  font-size: 30rpx;
  color: gray;
  margin: 20rpx;
  width: 40%;
}
.myorderlook-text {
  font-size: 30rpx;
  color: gray;
  position: relative;
  right: 20rpx;
  width: 60%;
  text-align: right;
}
.next-image {
  width: 20rpx;
  height: 25rpx;
  position: relative;
  right: 10rpx;
}
.navs {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee
}
.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}
.nav-item .nav-image {
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx;
}
.nav-item text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333;
}
/* 列表 */
.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
  background-color: #fff;
}
.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  width: 100%;
  border-bottom: 1rpx solid #e5e5e5;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.item-text {
  color: #333;
  font-size: 28rpx;
  margin-left: 20rpx;
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
}
